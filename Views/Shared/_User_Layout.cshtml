                        <li><a href="/shop/">Shop</a></li>
                        <li><a href="/services/">Services</a></li>
                        <li><a href="#">Request</a></li>
                        <li><a href="#">Become A Service Provider</a></li>
                    </ul>
                </div>
            </div>
        </section>
    </header>

    <header class="container-fluid bottomHeader">
        <section class="container">
            <div class="row">
                <div class="col-sm-4 col-md-3 padding20pxTB">
                    <a href="/" class="logo" style="margin-left:0"><img src="~/Content/assets/images/logo.png" alt="ACTPAL" /></a>
                </div>
                
                <div class="col-sm-6 col-md-5 pull-right">
                    @if (Session["UserID"] == null)
                    {
                    <ul class="cartPanel pull-right">
                        <li><a href="#">Cart <img src="~/Content/assets/icons/cart-white-icon.png"></a></li>
                        <li><a href="/Account?url=@Request.RawUrl">Sign Up / Login</a></li>
                    </ul>
                    }
                    else
                    {
                    <ul class="cartPanel pull-right">
                        <li>
                            <a href="/">
                                <i class="fa fa-envelope"></i>
                                <i id="newMessage" class="badge redBG countCircleHeader">0</i>
                            </a>
                        </li>
                        <li>
                            <a href="~/User/notifications">
                                <i class="fa fa-bell"></i>
                                <i id="totPenNotification" class="badge redBG countCircleHeader">0</i>
                            </a>
                        </li>

                        <li>
                            <a class="adduser dropdown-toggle" data-toggle="dropdown" href="#">
                                <i><img src="~/Content/assets/icons/user_request_icon.png"></i>
                                <i id="totPenReqcount" class='badge countCircleHeader redBG'>0</i>
                            </a>
                            <ul class="dropdown-menu headerDropDown nopadding">
                                <li>
                                    <span class="friendUserImg"><img src="~/Content/assets/images/Adv-images.png" /></span>
                                    <span class="friendUserName">Gaurav sharma</span>
                                    <span>
                                        <button type="button">Accect</button>
                                        <button type="button" class="grayBG">Reject</button>
                                    </span>                                    
                                </li>   
                                <li>
                                    <span class="friendUserImg"><img src="~/Content/assets/images/Adv-images.png" /></span>
                                    <span class="friendUserName">Gaurav sharma</span>
                                    <span>
                                        <button type="button">Accect</button>
                                        <button type="button" class="grayBG">Reject</button>
                                    </span>
                                </li>                                
                            </ul>
                        </li>
                        <li class="currentUser dropdown" id="currentUserBox">
                            <a class="accountBtn dropdown-toggle" data-toggle="dropdown">
                                <input type="hidden" value="@Session["UserID"]" id="userId" />
                                <input type="hidden" value="@Session["UserName"]" id="userName" />
                                <img src="@Session["ProfilePic"].ToString()" alt='user' class="img-responsive profilepic nomargin" data-userid="@Session["UserId"]" /> @Session["UserName"].ToString() <span class="caret"></span>
                            </a>
                            <div class="loginForm logoutBox dropdown-menu">
                                <div class="userInfoLog">
                                    @Html.Action("_my_account_dropdown", "home")
                                </div>
                            </div>
                           
                        </li>

                    </ul>
                    }
                </div>
            </div>
        </section>
    </header>

    <section class="container-fluid marginTop30px">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-lg-3 profileSection userSection">
                    <div class="userProfile">
                        <div class="userImage">
                            <a href="/User/Edit" class="editBtn" title="Edit Profile">Edit</a>
                            <a id="photoUpload" title="Photo Change">
                                <div class="statusBox">
                                    @if (Session["LoginStatus"].ToString() == "1" || Session["LoginStatus"].ToString() == "0")
                                    {
                                    <span class="currStatus available"></span>
                                    <ul class="allStatus">
                                        <li class="available active" data-status="1"> Available</li>
                                        <li class="away" data-status="2"> Away</li>
                                        <li class="doNotDisturb" data-status="3"> Do Not Disturb</li>
                                        <li class="offline" data-status="4"> Offline</li>
                                    </ul>
                                    }
                                    else if (Session["LoginStatus"].ToString() == "2")
                                    {
                                    <span class="currStatus away"></span>
                                    <ul class="allStatus">
                                        <li class="available" data-status="1"> Available</li>
                                        <li class="away active" data-status="2"> Away</li>
                                        <li class="doNotDisturb" data-status="3"> Do Not Disturb</li>
                                        <li class="offline" data-status="4"> Offline</li>
                                    </ul>
                                    }
                                    else if (Session["LoginStatus"].ToString() == "3")
                                    {
                                    <span class="currStatus doNotDisturb"></span>
                                    <ul class="allStatus">
                                        <li class="available" data-status="1"> Available</li>
                                        <li class="away" data-status="2"> Away</li>
                                        <li class="doNotDisturb active" data-status="3"> Do Not Disturb</li>
                                        <li class="offline" data-status="4"> Offline</li>
                                    </ul>
                                    }
                                    else if (Session["LoginStatus"].ToString() == "4")
                                    {
                                    <span class="currStatus offline"></span>
                                    <ul class="allStatus">
                                        <li class="available" data-status="1"> Available</li>
                                        <li class="away" data-status="2"> Away</li>
                                        <li class="doNotDisturb" data-status="3"> Do Not Disturb</li>
                                        <li class="offline active" data-status="4"> Offline</li>
                                    </ul>
                                    }
                                </div>
                                <img id="imgPreview" class="img-responsive profilepic nomargin" data-userid="@Session["UserId"]" src="@Session["ProfilePic"].ToString()" />
                            </a>
                            <h3 class="text-center colorWhite">@Session["UserName"].ToString()</h3>
                        </div>
                        <div class="userName">

                        </div>

                        <ul class="profileLinks">
                            <li>@Html.ActionLink("Requests", "index", "User")</li>
                            <li>@Html.ActionLink("Achivements", "achivements", "User")</li>
                            <li>@Html.ActionLink("Friends", "friends", "User")</li>
                            <li>@Html.ActionLink("Photos", "gallery", "User")</li>
                            <li>@Html.ActionLink("All Members", "all_members", "User")</li>
                            <li>@Html.ActionLink("My Order", "order_history", "User")</li>
                            <li>@Html.ActionLink("Community", "index", "community")</li>
                            @{string invCount = Html.Action("getNewInvitionCountByMemId", "community").ToString();}
                            <li>
                                <a href="/community/groups">
                                    Groups @if (invCount != "0")
                                    { <span class="invCount badge pull-right">@invCount</span>}
                                </a>
                            </li>
                            <li><a href="/community/favourite_groups">Favourite Groups</a></li>
                            <li>@Html.ActionLink("My Talent", "index", "my_talent")</li>
                            <li>@Html.ActionLink("Other Talent", "talent_post", "my_talent")</li>
                            <li><a href="javascript:void(0)" onclick="openWindow('/User/live_support'); return false">Live Support Chat</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-8 col-lg-9">
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>
    <section class="container-fluid footerTop marginTop30px">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div class="bussInfo">
                        <img src="~/Content/assets/icons/cart-icon.png" alt="" />
                        <h5>FREE SHIPPING</h5>
                        <p>Free Shipping on World wide Order Over $99.</p>
                    </div>
                </div>
                <div class="col-sm-3">
