    </header>


    <section class="container-fluid" style="padding:30px;">
        <div class="row">
            <div class="col-md-4 col-lg-3 profileSection userSection">
                <div class="userProfile">
                    <div class="userImage">
                        <a href="/User/Edit" class="editBtn" title="Edit Profile">Edit</a>
                        <a id="photoUpload" title="Photo Change">
                            <div class="statusBox">
                                @if (Session["LoginStatus"].ToString() == "1" || Session["LoginStatus"].ToString() == "0")
                                {
                                    <span class="currStatus available"></span>
                                    <ul class="allStatus">
                                        <li class="available active" data-status="1"> Available</li>
                                        <li class="away" data-status="2"> Away</li>
                                        <li class="doNotDisturb" data-status="3"> Do Not Disturb</li>
                                        <li class="offline" data-status="4"> Offline</li>
                                    </ul>
                                }
                                else if (Session["LoginStatus"].ToString() == "2")
                                {
                                    <span class="currStatus away"></span>
                                    <ul class="allStatus">
                                        <li class="available" data-status="1"> Available</li>
                                        <li class="away active" data-status="2"> Away</li>
                                        <li class="doNotDisturb" data-status="3"> Do Not Disturb</li>
                                        <li class="offline" data-status="4"> Offline</li>
                                    </ul>
                                }
                                else if (Session["LoginStatus"].ToString() == "3")
                                {
                                    <span class="currStatus doNotDisturb"></span>
                                    <ul class="allStatus">
                                        <li class="available" data-status="1"> Available</li>
                                        <li class="away" data-status="2"> Away</li>
                                        <li class="doNotDisturb active" data-status="3"> Do Not Disturb</li>
                                        <li class="offline" data-status="4"> Offline</li>
                                    </ul>
                                }
                                else if (Session["LoginStatus"].ToString() == "4")
                                {
                                    <span class="currStatus offline"></span>
                                    <ul class="allStatus">
                                        <li class="available" data-status="1"> Available</li>
                                        <li class="away" data-status="2"> Away</li>
                                        <li class="doNotDisturb" data-status="3"> Do Not Disturb</li>
                                        <li class="offline active" data-status="4"> Offline</li>
                                    </ul>
                                }
                            </div>
                            <img id="imgPreview" class="img-responsive profilepic" data-userid="@Session["UserId"]" src="@Session["ProfilePic"].ToString()" />
                        </a>
                        <h3 class="text-center colorWhite">@Session["UserName"].ToString()</h3>
                    </div>
                    <div class="userName">

                    </div>

                    <ul class="profileLinks">
                        <li>@Html.ActionLink("Requests", "index", "User")</li>
                        <li>@Html.ActionLink("Achivements", "achivements", "User")</li>
                        <li>@Html.ActionLink("Friends", "friends", "User")</li>
                        <li>@Html.ActionLink("Photos", "gallery", "User")</li>
                        <li>@Html.ActionLink("All Members", "all_members", "User")</li>
                        <li>@Html.ActionLink("Community", "index", "community")</li>
                        @{string invCount = Html.Action("getNewInvitionCountByMemId", "community").ToString();}
                        <li>
                            <a href="/community/groups">
                                Groups @if (invCount != "0")
                                { <span class="invCount badge pull-right">@invCount</span>}
                            </a>
                        </li>
                        <li><a href="/community/favourite_groups">Favourite Groups</a></li>
                        <li>@Html.ActionLink("My Talent", "index", "my_talent")</li>
                        <li>@Html.ActionLink("Other Talent", "talent_post", "my_talent")</li>
                        <li><a href="javascript:void(0)" onclick="openWindow('/User/live_support'); return false">Live Support Chat</a></li>
                    </ul>
                </div>
            </div>

            <div class="col-md-8 col-lg-9">
                @RenderBody()
            </div>
        </div>

    </section>

