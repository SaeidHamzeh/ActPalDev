@model IEnumerable<ViewModels.FriendRequestViewModel>

@{
    ViewBag.Title = "AllFriends";
   // Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="clearfix"></div>

<div class="row">
   
    <div class="col-lg-12 myFriendsList">
        
        <ul class="mutualFriends">
            @if (Model.Count() > 0)
            {

                foreach (var item in Model)
                {
                    <li class="userInfoLog" data-memid='@item.Mem_ID'>
                        <span class="imgBox">
                            @if (@item.Mem_Pic == null)
                            {                                
                                <img src="~/Content/images/default-profile.png" class="img-circle img-responsive" />
                            }
                            else
                            {
                                <img src="@item.Mem_Pic" class="img-circle img-responsive" />                            
                            }
                        </span>
                        <span class="userName detailBox">
                            <label class="userName">@item.Mem_Name</label>
                            @*@if (item.Mem_ID != Convert.ToInt32(Session["UserID"]))
                            {*@
                                <label class="logButtons" data-reqid="@item.RequestID">
                                    
                                    @if (item.RequestID == 1 && item.Mem_ID != Convert.ToInt32(Session["UserID"]))
                                    { 
                                    <button id="btnunfriend" onclick='UnFriendRequest(@item.Mem_ID,this)' class="btn btn-primary">Unfriend</button>
                                    }
                                    else if (item.RequestID == 4) { 
                                    <button id="btnPendingRequest" class="btn btn-primary addFriend">Pending</button>
                                    }
                                    else if (item.Mem_ID == Convert.ToInt32(Session["UserID"]))
                                    {
                                        <button id="btnPendingRequest" class="btn btn-success addFriend">Friend</button>
                                    }
                                    else
                                    {
                                    <button id="btnSendRequest" onclick='SendRequest(@item.Mem_ID,this)' class="btn btn-primary addFriend">Add Friend</button>
                                    }
                                </label>
                            @*}*@
                        </span>
                    </li>
                }

            }
            else
            {
                <li style="color:black;width:100%">
                    <span>No Request Found.</span>
                </li>

            }
        </ul>
    </div>
</div>

