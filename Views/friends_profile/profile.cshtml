@model IEnumerable<ViewModels.UserBasicInfoViewModel>

@if (@Session["UserID"] == null)
{
    Response.Redirect("/");
}
else
{
    ViewBag.Title = "Gallery Page";
    Layout = "~/Views/Shared/_LayoutFriends.cshtml";
}

<div class="row">
    <div class="clearfix"></div>
    <div class="col-lg-12">        
        <h3 class="blueHeading">Profile</h3>                
    </div>
    <div class="clearfix"></div>
</div>
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div id="loadingbasic" class="loader-Class" style="display:none;color:red"></div>
        <div class="row marginTop30px">
            <div class="col-sm-10 col-sm-offset-1 friendProfile">
                <p>
                    <label>First Name :-</label>
                    <span>@item.Mem_Name</span>
                </p>
                <p>
                    <label>DOB :-</label>
                    @if (item.date.ToString("MMM dd, yyyy") != "Jan 01, 0001") { 
                    <span>@item.date.ToString("MMM dd, yyyy")</span>
                    }

                </p>
                <p>
                    <label>Gender :-</label>
                    <span>@item.Mem_Gender</span>
                </p>

                <p>
                    <label>Address :-</label>
                    <span>@item.Mem_Address, @item.cityName, @item.StateName, <br /> @item.CountryName - @item.Mem_ZipCode</span>
                </p>
            </div>
        </div>

    }
}
else { 
    <h4 class="text-center">No Record Found</h4>
}

