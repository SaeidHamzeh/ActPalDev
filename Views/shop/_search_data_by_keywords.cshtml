@model IEnumerable<ViewModels.Products.ProductViewModels>

@if (Model.Count() > 0)
{
    foreach (var data in Model)
    {
        <div class="col-sm-4 col-xs-6">
            <div class="productBox">
                <a href="~/shop/product_details/@data.ID">
                    <img src="~/Content/assets/images/popularProduct1.png" class="img-responsive" alt="Banner">
                    <div class="contentDetail">
                        <h6>@data.Name</h6>
                        <h5>$@data.Price</h5>
                    </div>
                </a>
                <div class="productReviews">
                    <ul class="ul-table">
                        @{
        string likeData = Html.Action("getTotalLikeByProdId", new { ProductId = data.ID }).ToString();
        string[] likeD = likeData.Split('_');
                        }
                        <li><i class="fa fa-thumbs-up"></i> @likeD[0]</li>
                        <li><i class="fa fa-comments"></i> 200</li>
                        <li><i class="fa fa-eye"></i> 300</li>
                    </ul>
                </div>
                <div class="addToCart">
                    <button><i class="fa fa-cart-plus"></i> Add To Cart</button>
                </div>
            </div>
        </div>
    }
}
