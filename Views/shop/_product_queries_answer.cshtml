@model IEnumerable<ViewModels.Products.ProductQueriesAnswerViewModel>

@if (Model.Count() > 0)
{
    foreach (var data in Model) { 
    <div class="AnswerBox">
        <p>
            @data.Answer
        </p>
    </div>
    <div class="buyerInfo">
        <p>@data.Mem_Name | <i class="fa fa-check-circle"></i> Certified Buyer | Posted On - @data.EntryDate.ToString("dd-MMM-yyyy")</p>
    </div>
    }
}