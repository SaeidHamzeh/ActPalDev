@model IEnumerable<ViewModels.Products.ProductViewModels>
@if (Session["UserID"] == null)
{
    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/_Shop_Layout.cshtml";
}
else
{
    ViewBag.Title = "wishlist";
    Layout = "~/Views/Shared/_Shop_Dashboard_Layout.cshtml";
}

<section class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h2>My WishList</h2>
            </div>
            <div class="col-sm-12">
                <div class="productBoxPanel">
                    @if (Model.Count() > 0)
                    {
                        foreach (var data in Model)
                        {
                            <div class="col-md-3 col-sm-4 col-xs-6">
                                <div class="productBox">
                                    <a href="~/shop/product_details/@data.ID">
                                        @if (data.featureImage == null || data.featureImage == "")
                                        {
                                            <img src="~/Content/images/no_image.jpg" class="img-responsive" alt="Banner">
                                        }
                                        else
                                        {
                                            <img src="http://localhost:40795/Content/images/Service_Offer_Photos/@data.ServiceProvider_ID/@data.featureImage" class="img-responsive" alt="Banner">
                                        }
                                        <div class="contentDetail">
                                            <h6>@data.Name</h6>
                                            <h5>$@data.Price</h5>
                                        </div>
                                    </a>
                                    <div class="productReviews">
                                        <ul class="ul-table">
                                            <li><i class="fa fa-thumbs-up"></i> 500</li>
                                            <li><i class="fa fa-comments"></i> 200</li>
                                            <li><i class="fa fa-eye"></i> 300</li>
                                        </ul>
                                    </div>
                                    <div class="addToCart">
                                        <button><i class="fa fa-cart-plus"></i> Add To Cart</button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
