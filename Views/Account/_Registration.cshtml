@model Models.RegistrationViewModel

<script>
    $(document).ajaxStart(function () {
        $('#loadingreg').css('display', 'block');
    });
    $(document).ajaxComplete(function () {
        $('#loadingreg').css('display', 'none');
    });
    
</script>

@using (Ajax.BeginForm("RegistrationSubmit", "Account", null, new AjaxOptions() { HttpMethod = "POST", LoadingElementId = "loadingreg", UpdateTargetId = "regis-body", OnSuccess = "Sucess" }))
{
    @Html.AntiForgeryToken();
    <div id="loadingreg" class="loader-Class"></div>

    <p>
        <input type="hidden" value="0" name="requestId" id="reqIdReg" />
        @Html.TextBoxFor(m => m.Mem_Name, new { placeholder = "First Name", @class = "form-control" })
        <span style="color:red"> @Html.ValidationMessageFor(m => m.Mem_Name)</span>
    </p>
    <p>
        @Html.TextBoxFor(m => m.Mem_LName, new { placeholder = "Last Name", @class = "form-control" })
        <span style="color:red"> @Html.ValidationMessageFor(m => m.Mem_LName)</span>
    </p>
    <p>
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
        <span style="color:red"> @Html.ValidationMessageFor(m => m.Email)</span>
    </p>
    <p>
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
        <span style="color:red"> @Html.ValidationMessageFor(m => m.Password)</span>
    </p>
    <p>
        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
        <span style="color:red"> @Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
    </p>
    <p class="text-center">
        <input type="submit" value="" class="btn btn-warning" />@*<a href="edit-profile.html" class="btn btn-warning">Register</a>*@
    </p>
    
    <p><a href="#">Term of Use</a> <a href="#" class="pull-right">Privacy &amp; Cookies</a></p>
}

