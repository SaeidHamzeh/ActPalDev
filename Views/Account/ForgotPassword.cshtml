@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_Home_Layout.cshtml";
}

@using (Ajax.BeginForm("ForgetPass", "Account", new AjaxOptions { HttpMethod = "POST", OnSuccess = "", OnFailure = "" }, new { id = "forgotPassword" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-6 col-md-offset-3">
            <h3 class="blueHeading">Forgot Password</h3>

            <div class="clearfix"></div>
            <div class="marginTop30px"></div>
            @if (TempData["msg"] == null)
            {

                <h4>Enter Your Email ID:</h4>
                <p><input type="email" class="form-control" name="mailid" /></p>
                <p class="text-right"><input type="submit" value="Recover Password" class="btn btn-success" /></p>
                <p class="text-right beforeLogin">No account? <span class="editView" id="popUpRegLog">Create One!</span></p>

            }
            else
            {
                <div class="col-md-6 col-md-offset-3">
                    @TempData["msg"]
                </div>
            }
        </div>
    </div>
}
