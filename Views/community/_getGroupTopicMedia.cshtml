@model IEnumerable<ViewModels.Commans.MediaViewModel>

<div class="col-sm-12">
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            var path = item.uploaderId + "/" + item.path;
            if (item.mediaType == "img")
            {
                <div class="col-sm-3">
                    <img src="~/Content/Group-Media/images/@path" class="img-responsive" />
                </div>
            }
            else if (@item.mediaType == "vid")
            {
                <div class="col-sm-3">
                    <video style="width:300px;height:100px" controls class="img-responsive">
                        <source src="~/Content/Group-Media/videos/@path" />
                    </video>
                </div>
            }
            else
            {
                <div class="col-sm-3">
                    <a href="~/Content/Group-Media/documents/@path" download target="_blank">An Attachment</a>
                </div>
            }

        }
    }
    else
    {

    }
</div>