@model ViewModels.CountryViewModel

@{
    Layout = null;
}
@Html.DropDownListFor(p => p.Mem_CountryID, Model.CountryIEnum, "Select a Country", new { @id = "Country-DropdownID1", @class = "form-control", selected = @Model.Mem_CountryID })


<script type="text/javascript">
    $(function () {
        // Populate State/Provinces
        $('#Country-DropdownID1').change(function () {
            $("#loadingreg").addClass("show");
            var selectedCountryID = this.value;
            $('#StateProvinceContainer1').load('@Url.Action("ServStateProvinceView","CascadingDropDown")?countryID=' + selectedCountryID);

            $('#CityContainer1').load('@Url.Action("ServCityView", "CascadingDropDown")'); // clear up the city drop down list as no state is selected
            $("#loadingreg").removeClass("show");
        });
    });
</script>
